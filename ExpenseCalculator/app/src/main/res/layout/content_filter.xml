<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_filter"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.zeeshan.expensecalculator.Filter"
    tools:showIn="@layout/activity_filter">


    <fragment
        android:id="@+id/left_fragment_filter"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="com.example.zeeshan.expensecalculator.LeftFragmentFilter"
        tools:layout="@layout/list_fragment"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/right_fragment_filter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:background="@color/white"/>
</LinearLayout>
