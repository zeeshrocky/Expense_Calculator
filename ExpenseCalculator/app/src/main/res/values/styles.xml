<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="navigation_header_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/grey_highlight</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="navigation_heading">
        <item name="android:textColor">#BDBDBD</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="text_view_navigation_abstract_style">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">?android:attr/expandableListPreferredItemPaddingLeft</item>
        <item name="android:layout_marginBottom">@dimen/fifteen_margin</item>
        <item name="android:layout_marginTop">@dimen/fifteen_margin</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/fourteen_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_view_navigation_abstract_style.child_item_navigation"></style>

    <style name="text_view_navigation_abstract_style.parent_item_navigation"></style>

    <style name="image_view_navigation">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:contentDescription">picture</item>
    </style>


    <style name="DialogFragmentTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/fifteen_margin</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>
